{
  "variables": {
    "azure_client_id": "",
    "azure_client_secret": "",
    "azure_resource_group": "",
    "azure_storage_account": "",
    "azure_subscription_id": "",
    "azure_tenant_id": "",
    "azure_object_id": "",

    "azure_image_publisher": "",
    "azure_image_offer": "",
    "azure_image_sku": "",
    "azure_location": "",
    "azure_image_name": "",

    "azure_os_type": "",
    "azure_provisioner_type": "",
    "azure_script_name": "",

    "azure_communicator": "",
    "azure_winrm_use_ssl": "",
    "azure_winrm_insecure": "",
    "azure_winrm_timeout": "",
    "azure_winrm_username": "",

    "appversion": "",
    "build_host": "",
    "repository": "",
    "package_type": "",
    "packages": "",
    "upgrade": "",
    "configDir": null
  },
  "builders": [{
    "type": "azure-arm",

    "client_id": "{{user `azure_client_id`}}",
    "client_secret": "{{user `azure_client_secret`}}",
    "resource_group_name": "{{user `azure_resource_group`}}",
    "storage_account": "{{user `azure_storage_account`}}",
    "subscription_id": "{{user `azure_subscription_id`}}",
    "tenant_id": "{{user `azure_tenant_id`}}",
    "object_id": "{{user `azure_object_id`}}",

    "capture_container_name": "images",
    "capture_name_prefix": "{{user `azure_image_name`}}",

    "os_type": "{{user 'os_type'}}",
    "image_publisher": "{{user `azure_image_publisher`}}",
    "image_offer": "{{user `azure_image_offer`}}",
    "image_sku": "{{user `azure_image_sku`}}",

    "communicator": "winrm",
    "winrm_use_ssl": "true",
    "winrm_insecure": "true",
    "winrm_timeout": "3m",
    "winrm_username": "packer",

    "location": "{{user `azure_location`}}",
    "vm_size": "Standard_A2"
  }],
  "provisioners": [{
    "type": "{{user 'azure_provisioner_type'}}",
    "script": "{{user `configDir`}}/{{user 'script_name'}}",
    "environment_vars": [
      "repository={{user `repository`}}",
      "package_type={{user `package_type`}}",
      "packages={{user `packages`}}",
      "upgrade={{user `upgrade`}}"
    ],
    "pause_before": "30s"
  }]
}